<div id="platform-list">
    <% platforms.forEach(platform=> { %>
        <div class="platform" id="platform-<%= platform.name %>" onclick="onPlatformClick('<%= platform.name%>')">
            <%- ejsRenderImg(platform.icon) %>
                <label>
                    <%= platform.name %>
                </label>
                <% if(platform.gameCount){ %>
                    <span class="badge">
                        <%= platform.gameCount %>
                    </span>
                    <% } %>
        </div>
        <% }); %>
</div>